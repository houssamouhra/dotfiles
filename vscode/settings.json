{
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontLigatures": "'ss01', 'ss02', 'ss03','ss05', 'ss19', 'ss20', 'calt', 'cv01', 'cv06', 'cv14', 'zero'",
  "window.zoomLevel": 1,
  "editor.minimap.enabled": false,
  "editor.cursorBlinking": "expand",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.wordWrap": "on",
  "prettier.jsxSingleQuote": true,
  "markdown-preview-enhanced.previewTheme": "github-dark.css",
  "git.openRepositoryInParentFolders": "never",
  "chat.commandCenter.enabled": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "terminal.integrated.fontFamily": "JetBrainsMonoNL Nerd Font Mono",
  "terminal.integrated.fontLigatures.enabled": true,
  "terminal.integrated.fontLigatures.featureSettings": "\"calt\" on, 'ss03', 'ss01', 'ss02', 'ss19'",
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.env.windows": {
    "TERM": "xterm-256color",
    "STARSHIP_LOG": "error",
    "PATH": "C:\\Program Files\\starship\\bin;${env:PATH}"
  },

  // Code Navigation & IntelliSense Boost
  "javascript.suggest.autoImports": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "editor.quickSuggestions": {
    "other": true,
    "comments": true,
    "strings": true
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggest.preview": true,
  "editor.inlineSuggest.enabled": true, // Ghost text like GitHub Copilot
  "typescript.suggest.autoImports": true,

  // Smooth Navigation Enhancements
  "breadcrumbs.enabled": true,
  "explorer.compactFolders": false,
  "workbench.editor.enablePreview": true, // Keep tabs open

  // Visual Tweaks for Focus & Flow
  "editor.renderLineHighlight": "all",
  "editor.lineHeight": 1.5,
  "editor.guides.indentation": true,
  "editor.guides.bracketPairs": true,
  "editor.renderWhitespace": "selection",
  "editor.smoothScrolling": true,

  // Git & Commit UX Boost
  "git.confirmSync": false,
  "git.autofetch": true,
  "gitlens.statusBar.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.changes.locations": ["line", "overview", "gutter"],
  "gitlens.blame.highlight.locations": ["line", "overview", "gutter"],
  "gitlens.hovers.enabled": true,

  "workbench.colorCustomizations": {
    "editorGutter.addedBackground": "#00FF00",
    "editorGutter.modifiedBackground": "#FFFF00",
    "editorGutter.deletedBackground": "#FF3B3B",

    "[PinkCodes Pink]": {
      "editor.selectionBackground": "#3399ff66",
      "editor.selectionHighlightBackground": "#ff8dc655",
      "editor.wordHighlightBackground": "#ff69b422",
      "editor.wordHighlightStrongBackground": "#ff69b433"
    }
  },

  "terminal.integrated.inheritEnv": false,
  "telemetry.editStats.enabled": false,
  "json.schemas": [],
  "editor.allowVariableFontsInAccessibilityMode": true,
  "leetcode.workspaceFolder": "",
  "leetcode.defaultLanguage": "javascript",
  "hediet.vscode-drawio.resizeImages": null,
  "hediet.vscode-drawio.theme": "kennedy",
  "hediet.vscode-drawio.appearance": "automatic",
  "eslint.workingDirectories": [],
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "PinkCodes Pink",
  "diffEditor.ignoreTrimWhitespace": true,
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    },
    "Command Prompt": {
      "path": [
        "${env:windir}\\Sysnative\\cmd.exe",
        "${env:windir}\\System32\\cmd.exe"
      ],
      "args": [],
      "icon": "terminal-cmd"
    },
    "Git Bash": {
      "source": "Git Bash"
    },
    "Windows PowerShell": {
      "path": "C:\\WINDOWS\\System32\\WindowsPowerShell\\v1.0\\powershell.exe"
    }
  },
  "workbench.editor.empty.hint": "hidden",
  "workbench.secondarySideBar.defaultVisibility": "hidden",
  "security.allowedUNCHosts": ["wsl.localhost"],
  "workbench.productIconTheme": "feather-vscode",
  "playwright.runGlobalSetupOnEachRun": false
}
